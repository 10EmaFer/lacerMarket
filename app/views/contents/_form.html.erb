<%= form_for @content, html: { multipart: true } do |form| %>
  <% if content.errors.any? %>
    <div id="error_explanation">
      <h4><b><%= pluralize(content.errors.count, "error") %> :non permettono al form di essere inviato</b></h4>

      <ul>
        <% content.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <label class="grey-text">Scarica il contenuto digitale che vuoi vedere (formati supportati: power point, exel, word, pdf, immagini e mp3)</label>
    <%= form.file_field :allegato %>
  </div>
  <br>

  <div class="field">
    <%= form.label :titolo %>
    <%= form.text_field :titolo %>
  </div>

  <div class="field">
    <%= form.label :descrizione %>
    <%= form.text_area :descrizione, class: "materialize-textarea" %>
  </div>

  <div class="field">
    <%= form.label :prezzo_min_50_cent %>
    <%= form.text_field :price %>
  </div>

  <div class="field">
    <label class="grey-text">carica un immagine da utilizzare come cover per il tuo contenuto</label>
    <%= form.file_field :cover %>
  </div>

  <br>

  <div class="actions">
    <%= form.submit 'Salva contenuto', class: "btn btn-form" %>
  </div>
  <br>
<% end %>
